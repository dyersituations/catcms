<div class="jumbotron">
  <h4>Admin Login</h4>
  <div class="row">
    <div class="col-12">Access settings and make changes to the site.</div>
  </div>
</div>
<%= form_tag('login_admin') do %>
  <div class="row">
    <div class="col-12 form-group">
      <%= label_tag 'Password' %>
      <%= password_field_tag :admin_pass, nil, class: 'form-control' %>
    </div>
    <div class="col-12 form-group">
      <%= submit_tag 'Login', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<%= flash[:error] %>
