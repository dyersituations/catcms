<%= form_tag(:controller => :admin, :action => :save) do %>
  <%= label_tag 'Admin Password' %>
  <%= password_field_tag :admin_pass %>
  <br />
  <%= label_tag 'Site Name' %>
  <%= text_field_tag :site_name %>
  <br />
  <%= label_tag 'Bar Background Color' %>
  <%= text_field_tag :bar_bg_color %>
  <br />
  <%= label_tag 'Bar Font Color' %>
  <%= text_field_tag :bar_font_color %>
  <br />
  <%= label_tag 'Page Background Color' %>
  <%= text_field_tag :page_bg_color %>
  <br />
  <%= label_tag 'Copyright Name' %>
  <%= text_field_tag :copyright_name %>
  <br />
  <%= label_tag 'Copyright Color' %>
  <%= text_field_tag :copyright_color %>
  <br />
  <%= label_tag 'Display Gallery Captions' %>
  <%= check_box_tag :gallery_captions %>
  <br />
  <%= submit_tag 'Save Settings' %>
<% end %>
