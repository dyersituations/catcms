<style>
  body {
    background: <%= Settings.instance.page_bg_color %>
  }
  .navbar {
    background: <%= Settings.instance.navbar_bg_color %>;
  }
  .navbar a {
    color: <%= Settings.instance.navbar_font_color %>;
  }
  .navbar-toggler {
    border-color: <%= Settings.instance.navbar_font_color %>;
  }
  .navbar-toggler-icon {
    background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 32 32' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='<%= Settings.instance.navbar_font_color %>' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 8h24M4 16h24M4 24h24'/%3E%3C/svg%3E");
  }
  <% if !@page.banner.blank? && params[:action] == 'show' %>
    .banner {
      height: 300px;
      background: url(<%= @page.banner %>) center;
    }
  <% end %>
</style>
