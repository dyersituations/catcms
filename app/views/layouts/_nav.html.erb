<nav class="navbar navbar-expand-lg">
  <%= link_to root_url, :class => 'navbar-brand' do %><%= Settings.instance.site_name %><% end %>
  <% if @pages.any? %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  <% end %>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav">
      <% @pages.each do |page| %>
        <% if page.page_type == Page::PAGETYPES[:GALLERY] %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= page.title %>
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <% Post.pluck(:category).uniq{ |c| c.downcase }.sort.each do |category| %>
                <%= link_to category, root_url + page.path + '/' + category.downcase.delete(' '), :class => 'dropdown-item' %>
              <% end %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to root_url + page.path, :class => 'nav-link' do %>
              <%= page.title %>
            <% end %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</nav>
