<h1>Editing page</h1>

<% if @page.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

    <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= render 'form' %>

<%= link_to 'Cancel', page_view_path(@page.path) %>
<%= button_to 'Remove Page', @page,
  :confirm => 'Are you sure you want to remove this page permanently?',
  :method => :delete %>

<% if !@plain %>
  <%= render @form %>
<% end %>