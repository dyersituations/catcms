<%= form_for @page do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :page_type %><br />
    <%= f.select :page_type, Page::PAGETYPES %>
  </div>

  <% if @plain %>
    <div class="field">
      <%= f.label :banner %><br />
      <%= f.file_field :banner %>
    </div>
    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>